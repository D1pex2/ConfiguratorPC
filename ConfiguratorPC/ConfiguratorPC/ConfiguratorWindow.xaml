
<Window x:Class="ConfiguratorPC.ConfiguratorWindow" x:Name="ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfiguratorPC" xmlns:controls="clr-namespace:ConfiguratorPC.Controls"
        mc:Ignorable="d"
        Title="Конфигуратор" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="ListView" x:Key="ComponentsListView">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="{Binding Component.Name}"/>
                        </DockPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="controls:ComponentButton">
            <Setter Property="Margin" Value="0,0,0,-2"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="5" x:Name="ConfigStackPanel">
        <controls:ComponentButton x:Name="ProcessorButton" ComponentType="Процессор" DeleteComponent="ProcessorButton_DeleteComponent" ChangeComponent="ProcessorButton_ChangeComponent"/>
        <ListView x:Name="ProcessorsList" Visibility="Collapsed" PreviewMouseLeftButtonDown="ProcessorsList_PreviewMouseLeftButtonDown" Style="{StaticResource ComponentsListView}" IsVisibleChanged="List_IsVisibleChanged"/>
        <controls:ComponentButton x:Name="MotherBoardButton" ComponentType="Материнская плата" DeleteComponent="MotherBoardButton_DeleteComponent" ChangeComponent="MotherBoardButton_ChangeComponent"/>
        <ListView x:Name="MotherBoardsList" Visibility="Collapsed" Style="{StaticResource ComponentsListView}" PreviewMouseLeftButtonDown="MotherBoardsList_PreviewMouseLeftButtonDown" IsVisibleChanged="List_IsVisibleChanged"/>
    </StackPanel>
</Window>
