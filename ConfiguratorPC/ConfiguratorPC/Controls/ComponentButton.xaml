<UserControl x:Class="ConfiguratorPC.Controls.ComponentButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfiguratorPC.Controls"
             mc:Ignorable="d" 
             MinHeight="50" Width="Auto">
    <Border BorderBrush="Gray" BorderThickness="2">
        <DockPanel>
            <TextBlock x:Name="TypeTextBlock" Text="Тип компонента" MinWidth="150"  VerticalAlignment="Center"/>
            <Image Height="40" Width="40"/>
            <Button x:Name="InteractionButton" Content="Добавить" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Right" Background="Transparent" Click="InteractionButton_Click"/>
            <TextBlock x:Name="PriceTextBlock" VerticalAlignment="Center"  HorizontalAlignment="Right" DockPanel.Dock="Right"/>
            <TextBlock x:Name="NameTextBlock" VerticalAlignment="Center"/>
        </DockPanel>
    </Border>
</UserControl>
